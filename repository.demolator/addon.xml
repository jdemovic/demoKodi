<addon id="repository.demolator" name="Demolator Repository" version="1.0.0" provider-name="Speed99">
  <requires>
    <import addon="xbmc.addon" version="12.0.0"/>
    <import addon="xbmc.python" version="3.0.0"/> <!-- Odporúčané -->
  </requires>
  <extension point="xbmc.addon.repository" name="Demolator Repo">
    <info compressed="false">https://jdemovic.github.io/demoKodi/addons.xml</info>
    <checksum>https://jdemovic.github.io/demoKodi/addons.xml.md5</checksum>
    <datadir zip="true">https://jdemovic.github.io/demoKodi/</datadir> <!-- Pridajte zip="true" -->
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>Demolator repo s doplnkom</summary>
    <description>Obsahuje DemoStream doplnok pre Kodi.</description>
    <platform>all</platform>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.jpg</fanart> <!-- Odporúčané -->
    </assets>
  </extension>
</addon>